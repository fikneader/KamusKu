        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:textColor="@color/cardview_dark_background"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

</FrameLayout>
